<% provide(:title, "ログイン") %>

<div class="container-fluid center-content text-center">

  <div class="card" style="width: 30rem;">
    <h2 class="card-header"><i class="fas fa-user-plus">ログイン</i></h2>
    <div class="card-body">
          <%= simple_form_for :session, url: login_path do |f| %>
            <div class="form-group">
              <%= f.label :email, "Email" %><br>
              <%= f.text_field :email %>
            </div>
            <div class="form-group">
              <%= f.label :password, "password" %><br>
              <%= f.password_field :password %>
            </div>
            <%= f.button :submit, "Log in", :class=>"btn btn-info btn-block" %>
          <% end %>
          <br />
          <p class="font-weight-light">新規登録は<%= link_to 'こちら', new_user_path, :class=>"text-link" %>から</p>
    </div>
  </div>
</div>
