<% provide(:title, "Edit") %>

<div class="container-fluid center-content">
  <div class="card" style="width: 30rem;">
    <h3 class="card-header ac2"><i class="fas fa-search-plus">ユーザー情報を編集</i></h3>
    <div class="card-body ac2">

            <%= simple_form_for @user , :url => {:action => :update} do |f| %>

                <!--  #as: :fileでアップロードフォームが作れる -->
                <div class="form-group">
                  <h6>現在の画像：</h6>
                  <p><%= image_tag @user.image_url(:thumb) if @user.image.present? %></p>

                  <%= f.input :image, as: :file %>
                </div>

                <div class="form-group">
                    <%= f.label :name, "Name" %>
                    <%= f.text_field :name %>
                </div>

                <div class="form-group">
                    <%= f.input :age, collection: 0..110, label: "Age" %>
                </div>

                <div class="form-group">
                    <%= f.label :name, "Birth Place" %>
                    <%= f.text_field :birthplace %>
                </div>

              <!--  ================================================================= -->
              <!--  詳細情報欄 -->
              <!--  ================================================================= -->
              <div class="form-group">
                  <%= f.input :gender, as: :radio_buttons, collection: [["male", "male"],["female", "female"]], item_wrapper_class: "inline" %>
              </div>

              <!--date型で生年月日。 start_year,end_yearで西暦範囲を絞る -->
              <div class="form-group">
                  <%= f.input :birth_date, start_year: Date.today.year - 110, end_year: Date.today.year %>
              </div>


              <!--元気？ラジオボタン。 Good => 1, Fine=>2.....として登録 -->
              <div class="form-group">
                  <%= f.input :how_are_you, label: "How are you?",  as: :radio_buttons, collection: [["Good!!", 1],["Fine!", 2],["Soso", 3],["Bad..", 4]], checked: 1, item_wrapper_class: "inline" %>
              </div>

              <!-- プログラミングチェックボックス フォームの書き方変更-->
              <div class="form-group">
                  <p><%= f.label :name, "Programming" %></p>
                    <%= f.collection_check_boxes :programming, [["Java", "Java"],["Ruby", "Ruby"],["PHP", "PHP"],["Python", "Python"]], :first, :last %>
              </div>

              <%= f.button :submit, "更新する", :class=> "btn btn-info btn-lg" %>
                  <!-- ↑登録ボタンはsimple form forの中に入れる -->
            <% end %>


    </div><!-- class="card-body" -->
  </div><!-- class="card" -->
</div><!-- class="container-fluid center-content" -->
