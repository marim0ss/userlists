<div id="new-user">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h3 class="text-center">ユーザー情報を編集</h3>
        <%= simple_form_for @user , :url => {:action => :update} do |f| %>
          <div class="form">
            <%= f.input :name %>
            <%= f.input :age %>
            <%= f.input :birthplace %>
            <%= f.button :submit, "送信", :class=> "btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
