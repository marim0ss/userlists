<% provide(:title, "ユーザー情報の詳細") %>

<div class="container-fluid center-content">
  <div class="card" style="width: 30rem;">
    <h3 class="card-header"><i class="fas fa-search-plus">ユーザー情報の詳細</i></h3>
    <div class="card-body">
      <p><%= image_tag @user.image_url(:thumb) if @user.image.present? %></p>
      <p>名前：<%= @user.name %></p>
      <p>年齢：<%= @user.age %></p>
      <p>出身：<%= @user.birthplace %></p>
      <p>gender：<%= @user.age %></p>
      <p>birth_date：<%= @user.birth_date %></p>
      <p>programming：<%= @user.programming_status %></p>
    <p>
      <%= link_to '新規投稿する', new_user_post_path(@user), class: "btn btn-info btn-lg show-btn" %>
      <%= link_to 'あなたの投稿一覧', user_posts_path(@user), class: "btn btn-outline-warning btn-lg show-btn"  %>
      <%= link_to 'プロフィールを編集', edit_user_path(@user), class: "btn btn-outline-info btn-lg show-btn" %>
    </p>

      </div>
    </div>
  </div>
