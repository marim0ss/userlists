<div class="container-fluid center-content">
  <div class="card" style="width: 30rem;">
    <h3 class="card-header ac2"><i class="fas fa-search-plus">ユーザー情報の詳細</i></h3>
    <div class="card-body ac2">
      <p><%= image_tag @user.image_url(:thumb) if @user.image.present? %></p>
      <p>名前：<%= @user.name %></p>
      <p>年齢：<%= @user.age %></p>
      <p>出身：<%= @user.birthplace %></p>
      <p>birth_date：<%= @user.birth_date %></p>
      <p>programming：<%= @user.programming_status %></p>
      <p>
        <%= link_to '新規投稿する', new_user_post_path(@user), class: "btn btn-ac1 btn-lg show-btn" %>
        <%= link_to 'あなたの投稿一覧', user_posts_path(@user), class: "btn btn-info btn-lg show-btn"  %>
        <%= link_to 'プロフィール編集', edit_user_path(@user), class: "btn btn-outline-info btn-lg show-btn" %>
        <%= link_to 'User一覧へ戻る', users_path, class: "btn btn-outline-secondary btn-lg show-btn" %>
      </p>
    </div>
  </div>
</div>
