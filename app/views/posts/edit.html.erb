<% provide(:title, "新しい投稿") %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <h3>投稿する</h3>

      <%= simple_form_for @post, :url => {:action => :create} do |f| %>

      <hr />
      <div class="form-group">
        <!-- <%= f.input :image, as: :file, label: "画像を投稿" %> -->
        <h5>画像を選択</h5>
        <%= f.file_field :image %>
      </div>
      <div class="input-group md-3">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <%= f.label :content, label: "コメント" %></span>
          </div>

          <%= f.text_field :content, as: :textarea, :class=>"form-control-lg" %>
        </div>

        <div class="form-group">Posted By：<%= @user.name %></div>


        <%= f.button :submit, "投稿！", :class=>"btn btn-info btn-lg" %>
        <% end %>
    </div>
  </div>
</div>
