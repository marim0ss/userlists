<% provide(:title, "投稿内容一覧") %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h3><%= @user.name %>の投稿内容一覧</h3>
      <p>ID: <%= @user.id %></p>
    </section>
  </aside>

  <div class="col-md-8">
    <% @posts.each do |post| %>
    <p>photo：</p>
      <p>
      <%= image_tag post.image_url(:thumb) if post.image.present? %>
    </p>
    <p>comment：</p>
    <p><%= post.content %></p>
    <p>date:
      <%= post.updated_at %>
    </p>
    <% end %>
  </div>
</div>
