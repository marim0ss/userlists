<% provide(:title, "新しい投稿") %>

<div class="container-fluid center-content">
  <div class="card" style="width: 30rem;">
    <h3 class="card-header ac2"><i class="fas fa-paper-plane">  新規投稿する</i></h3>
    <div class="card-body ac2">

      <%= simple_form_for @post, :url => {:action => :create} do |f| %>
      <div class="row">
          <!-- <%= f.label :"写真を投稿" %> -->
          <h3><i class="fas fa-camera-retro"></i></h3>
          <%= f.file_field :image, class: 'ml-2' %>
          <%= f.text_field :content, class: 'form-control mt-3', placeholder: 'コメント' %>
      </div>

      <div class="row mt-4">
        <p class="mx-auto">
          <%= f.button :submit, "投稿！", :class=>"btn btn-ac1 btn-lg btn-block my-2" %>
          <%= link_to '投稿一覧へ戻る', user_posts_path(@user), class: "btn btn-outline-info btn-lg" %>
          <%= link_to 'User詳細へ戻る', user_path(@user), class: "btn btn-outline-secondary btn-lg" %>
        </p>
      </div>
      <% end %>

    </div>
  </div>
</div>
