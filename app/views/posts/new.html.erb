<% provide(:title, "新しい投稿") %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <h3>投稿する</h3>

      <%= simple_form_for @posts, :url => {:action => :create} do |f| %>

      <hr />
      <div class="form-group">
        <%= f.input :post_image_name, as: :file, label: "画像" %>
      </div>
      <div class="input-group md-3">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <%= f.label :content, "コメント" %></span>
          </div>

          <%= f.text_field :content, as: :textarea, :class=>"form-control-lg" %>
        </div>

        <div class="form-group">Posted By：</div>


        <%= f.button :submit, "投稿！", :class=>"btn btn-info btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
